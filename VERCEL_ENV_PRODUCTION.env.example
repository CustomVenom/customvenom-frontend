# ============================================
# VERCEL ENVIRONMENT VARIABLES - PRODUCTION TEMPLATE
# ============================================
# Copy this to VERCEL_ENV_PRODUCTION.env and fill in real values
# DO NOT commit VERCEL_ENV_PRODUCTION.env to git

# NextAuth - Required
NEXTAUTH_URL=https://customvenom.com
AUTH_SECRET=generate-random-32-byte-secret
NEXTAUTH_SECRET=generate-random-32-byte-secret

# Database - REQUIRED
DATABASE_URL=postgresql://user:password@host:5432/database

# Google OAuth - Required
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Yahoo OAuth - Required
YAHOO_CLIENT_ID=your_yahoo_client_id
YAHOO_CLIENT_SECRET=your_yahoo_client_secret

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://customvenom.com

# API Configuration
NEXT_PUBLIC_API_BASE=https://customvenom-workers-api.jdewett81.workers.dev
API_BASE=https://customvenom-workers-api.jdewett81.workers.dev

# Stripe - Production Mode
STRIPE_SECRET_KEY=sk_live_your_live_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=0
PAYWALL_DISABLED=0

# Logs
NEXT_PUBLIC_LOGS_ENABLED=false

